{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Database",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/database",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "docker-compose up"],
      "console": "integratedTerminal"
    },
    {
      "name": "Frontend",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "./run-frontend.sh"],
      "console": "integratedTerminal"
    },
    {
      "name": "Backend",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "cd application/backend && yarn start:dev"],
      "console": "integratedTerminal"
    },
    {
      "name": "Backend Logs",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "./backend-logs.sh"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Fullstack",
      "configurations": ["Database", "Frontend", "Backend"]
    }
  ]
} 